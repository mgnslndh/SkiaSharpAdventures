<UserControl x:Class="SkiaSharpAdventures.Controls.SceneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkiaSharpAdventures.Controls"
             xmlns:wpf="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <wpf:SKElement x:Name="SkiaHost" PaintSurface="SkiaHost_OnPaintSurface"  />
        <WindowsFormsHost x:Name="OpenGlHost" Initialized="OpenGlHost_OnInitialized" Visibility="Collapsed" />
    </Grid>
</UserControl>
